modules = ["kotlin", "java-17", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AndroidBuildServer"

[[workflows.workflow]]
name = "AndroidBuildServer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ${REPL_HOME} && ./gradlew assembleDebug"

[deployment]
run = ["sh", "-c", "./gradlew :app:assembleDebug"]
