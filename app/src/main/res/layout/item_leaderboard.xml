<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#2A2A2A"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_leaderboard_type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:tint="@color/gold"
                tools:src="@drawable/ic_experience" />

            <TextView
                android:id="@+id/text_leaderboard_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Total Experience" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_leaderboard_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            tools:text="Global rankings based on total XP earned. Compete with hunters around the world." />

        <TextView
            android:id="@+id/text_last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="Last updated: Jan 10, 2023 at 10:30 AM" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
