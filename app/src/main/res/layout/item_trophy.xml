<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/medium_gray"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_trophy_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_accent"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="7-Day Streak" />

        <TextView
            android:id="@+id/tv_trophy_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            tools:text="Unlocked: 2023-11-15" />

        <TextView
            android:id="@+id/tv_trophy_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            tools:text="Bonus: +1% STR" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
