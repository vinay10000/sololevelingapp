<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimated Calories Burned"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter calories (e.g., 300)"
        android:inputType="number"
        android:maxLines="1" />

    <TextView
        android:id="@+id/text_workout_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="You'll earn XP and stat gains based on your workout difficulty and duration!"
        android:textStyle="italic" />

</LinearLayout>
