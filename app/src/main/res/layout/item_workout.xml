<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_workout_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/chip_workout_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Full Body Workout" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_workout_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Strength" />

        <TextView
            android:id="@+id/text_stats_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Primary Stat:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_workout_name" />

        <TextView
            android:id="@+id/text_primary_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@id/text_stats_label"
            app:layout_constraintStart_toEndOf="@id/text_stats_label"
            app:layout_constraintTop_toTopOf="@id/text_stats_label"
            tools:text="Strength" />

        <TextView
            android:id="@+id/text_secondary_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Secondary:"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/text_primary_stat"
            app:layout_constraintStart_toEndOf="@id/text_primary_stat"
            app:layout_constraintTop_toTopOf="@id/text_primary_stat" />

        <TextView
            android:id="@+id/text_secondary_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@id/text_secondary_label"
            app:layout_constraintStart_toEndOf="@id/text_secondary_label"
            app:layout_constraintTop_toTopOf="@id/text_secondary_label"
            tools:text="Agility" />

        <TextView
            android:id="@+id/text_difficulty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Difficulty:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_stats_label" />

        <RatingBar
            android:id="@+id/rating_difficulty"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1"
            app:layout_constraintBottom_toBottomOf="@id/text_difficulty_label"
            app:layout_constraintStart_toEndOf="@id/text_difficulty_label"
            app:layout_constraintTop_toTopOf="@id/text_difficulty_label"
            tools:rating="3" />

        <TextView
            android:id="@+id/text_exercises_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Exercises:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_difficulty_label" />

        <TextView
            android:id="@+id/text_exercise_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/text_exercises_label"
            app:layout_constraintStart_toEndOf="@id/text_exercises_label"
            app:layout_constraintTop_toTopOf="@id/text_exercises_label"
            tools:text="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/text_exercises_label">

            <Button
                android:id="@+id/button_start_workout"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="Start"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_edit_workout"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_delete_workout"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="#F44336" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
